{
  "include": ["src/**/*"],
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2022",
    "experimentalDecorators": true,
    "module": "commonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
